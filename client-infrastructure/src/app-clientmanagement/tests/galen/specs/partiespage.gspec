@objects
  firstName_label   id      parties.firstName_label
  firstName         id      parties.firstName
  lastName_label    id      parties.lastName_label
  lastName          id      parties.lastName
  search            id      search
  add               id      add
    
= form =
	@on desktop
		firstName:
			near firstName_label 5 to 20px right
		lastName:
			near lastName_label 5 to 20px right
		search:
			above add 0 to 10 px
	@on mobile
		firstName_label:
			above firstName 5 to 20px
		lastName_label:
			above lastName 5 to 20px
		search:
			above add 0 to 10 px
	@on tablet
		firstName_label:
			above firstName 5 to 15px
		lastName_label:
			above lastName 5 to 15px
		search:
			above add 0 to 10 px