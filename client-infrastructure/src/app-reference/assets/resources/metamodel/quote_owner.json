{
    "metamodel" : {
        "labels": {
            "title": "_OWNER_POPUP",
            "ok": "_SAVE",
            "close": "_CLOSE"
        },
        "sections": [

            {
            "properties": [
                {
                    "id": "quote_owner:legal_classification",
                    "label": "_LEGAL_ACTIVITY_CLASS",
                    "type": "select",
                    "row": 2
                },
                {
                    "id": "quote_owner:type",
                    "label": "_OWNER_TYPE",
                    "type": "select",
                    "row": 1
                },
                {
                    "id": ["person:last_name","organization:name", "quote_owner:name"],
                    "label": "_LAST_NAME",
                    "type": "autocomplete",
                    "row": 2,
                    "options":{
                            "getData": "searchByName",
                            "select": "selectPerson"
                        } 
                },
                {
                    "id": ["person:name", "quote_owner:first_name"],
                    "type": "autocomplete",
                    "label": "_FIRSTNAME",
                    "attributes": {
                        "maxlength": 40,
                        "typeahead-wait-ms": 3000
                    },
                    "row": 3
                },
                {
                    "id": ["person:birth_date", "quote_owner:birth_date"],
                    "type": "date",
                    "label": "_DOB",
                    "row": 3
                },
                {
                    "id": ["postal_address:postal_code", "quote_owner:postal_code"],
                    "type": "autocomplete",
                    "label": "_POSTALCODE",
                    "selector": "postal_address:preferred",
                    "attributes": {
                        "maxlength": 4
                    },
                    "patchOnBlur": true,
                    "onUpdate": "callbackQuoteOwner",
                    "row": 4
                },
                 {
                    "id": ["postal_address:street_name", "quote_owner:street_name"],
                    "type": "autocomplete",
                    "label": "_STREET_NAME",
                    "selector": ["postal_address:preferred", "operation_status"],
                    "row": 5
                },
                  {
                    "id": ["postal_address:city", "quote_owner:city"],
                    "type": "autocomplete",
                    "label": "_CITY",
                    "selector": "postal_address:preferred",
                    "row": 4
                },
                 {
                    "id": ["postal_address:box_number","quote_owner:box_number"],
                    "type": "autocomplete",
                    "label": "_BOX_NO",
                    "selector": "postal_address:preferred",
                    "row": 5
                },
                 {
                    "id": ["postal_address:street_number", "quote_owner:street_number"],
                    "type": "text",
                    "label": "_STREET_NUMBER",
                    "selector": "postal_address:preferred",
                    "row": 6
                },
                 {
                    "id": ["e_mail_address:text", "quote_owner:email"],
                    "type": "email",
                    "label": "_EMAIL",
                    "row": 6
                }

            ]
       }],

       "businessObject": {
            "quote_owner": [
                    "quote_owner:person_link",
                    "quote_owner:organization_link"
            ],
            "person": [
                    "person:postal_address_list",
                    "person:e_mail_address_list",
                    "cscaia:operations"
            ],
            "organization": [
                    "organization:postal_address_list",
                    "organization:e_mail_address_list"
            ]
        },
    
    "actions": 
       {

            "reset": {
                "links":["quote_owner:person_link", "quote_owner:organization_link"]
            },
            "ok": {
                "callback": "callbackQuoteOwner"
            }
           

        }
    }
    
}